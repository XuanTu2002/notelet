{
    "manifest_version": 3,
    "name": "Notelet",
    "version": "1.0.0",
    "description": "A minimalist Chrome Extension to save and manage text notes",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "128": "icons/icon128.png"
        }
    },
    "permissions": [
        "storage"
    ],
    "icons": {
        "128": "icons/icon128.png"
    }
}